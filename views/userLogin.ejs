<%- include('partials/header') -%>

<div class="container mt-5">
    <h1>Login</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form action="/auth/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" autocomplete="off">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" autocomplete="off">
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
            </form>
  
          </div>
        </div>
      </div>
  
      <div class="col-sm-4">


        <div class="card">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google btn-lg" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
          </div>
        </div>

       
            <!-- <div class="card">
              <div class="card-body">
                <a class="btn btn-block btn-social btn-facebook btn-lg" href="/auth/facebook" role="button">
                  <i class="fab fa-facebook"></i>
                  Sign In with Facebook
                </a>
              </div>
            </div>  -->

      </div>
    </div>

    <h2 style="margin-top: 50px;">New here?</h2>
    <h3><a href="/register"><a href="/register">Register</a></h3>
  </div>


	






